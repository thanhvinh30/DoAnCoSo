<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Tài Khoản Cá Nhan</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"> Trang Chủ</a></li>
        <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Cart">Giỏ hàng</a></li>
        <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Products">Sản Phẩm</a></li>
    </ol>
</div>


<div class="container mt-5">
    <div class="row">
        <div class="col-lg-4 pb-5">
            <!-- Account Sidebar-->
            <div class="author-card pb-3">
                <div class="author-card-cover">
                    <a class="btn btn-style-1 btn-white btn-sm" href="#" data-toggle="tooltip" title="" >
                        <img class="author-card-cover" src="~/img/banner-fruits.jpg" />
                    </a>
                </div>
                <div class="author-card-profile">
                    <div class="author-card-avatar">
                        <img src="" alt="Daniel Adams">
                    </div>
                    <div class="author-card-details">
                        <h5 class="author-card-name text-lg">@Model.CusName</h5>
                    </div>
                </div>
            </div>
            <div class="wizard">
                <nav class="list-group list-group-flush">
                    <a class="list-group-item" href="#Orders">
                        <i class="fa fa-cart-arrow-down"></i>Danh Sách Đơn Hàng                        
                    </a>
                    <a class="list-group-item active" href="#Profile">
                        <i class="fa fa-user text-muted"></i>Thông tin cá nhân
                    </a>
                    <a href="/logout.html" class="list-group-item">
                        <i class="fa fa-sign-out" aria-hidden="true"></i>Log Out                        
                    </a>                         
                </nav>
            </div>
        </div>


        <!-- Profile Settings-->


        <div id="Profile" class="col-lg-8 pb-5">
            <form class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-fn">Họ và Tên</label>
                        <input class="form-control" type="text" id="account-fn" value="@Model.CusName" required="">
                    </div>
                </div>                
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-email">E-mail</label>
                        <input class="form-control" type="email" id="account-email" value="@Model.CusEmail" disabled="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-phone">Phone Number</label>
                        <input class="form-control" type="text" id="account-phone" value="@Model.Phone" required="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-phone">Địa Chỉ</label>
                        <input class="form-control" type="text" id="account-phone" value="@Model.Address" required="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-phone">Ngày Sinh</label>
                        <input class="form-control" type="date" id="account-phone" value="@Model.Birthday" required="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-pass">New Password</label>
                        <input class="form-control" type="password" id="account-pass" name="NewPassword">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-confirm-pass">Confirm Password</label>
                        <input class="form-control" type="password" id="account-confirm-pass" name="ConfirmPassword">
                    </div>
                </div>
                <div class="col-12">
                    <hr class="mt-2 mb-3">
                    <div class="d-flex flex-wrap justify-content-between align-items-center">
                        <div class="custom-control custom-checkbox d-block">
                            <input class="custom-control-input" type="checkbox" id="subscribe_me" checked="">
                            <label class="custom-control-label" for="subscribe_me">Subscribe me to Newsletter</label>
                        </div>
                        <button class="btn btn-style-1 btn-primary" type="button" data-toast-message="Your profile updated successfuly." type="submit">Update Profile</button>
                    </div>
                </div>
            </form>
        </div>

        <div id="Orders" class="col-lg-8 pb-5">
            <div class="d-flex justify-content-end pb-3">
                <div class="form-inline">
                    <label class="text-muted mr-3" for="order-sort">Sort Orders</label>
                    <select class="form-control" id="order-sort">
                        <option>All</option>
                        <option>Delivered</option>
                        <option>In Progress</option>
                        <option>Delayed</option>
                        <option>Canceled</option>
                    </select>
                </div>
            </div>
            <div class="table-responsive">
                @await Html.PartialAsync("_OrderPartialView.cshtml", DanhSachDonHang)
            </div>
        </div>
       
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function() {
        var profileLink = document.querySelector('a[href="#Profile"]');
        var ordersLink = document.querySelector('a[href="#Orders"]');
        var profileSection = document.getElementById("Profile");
        var ordersSection = document.getElementById("Orders");

        // Xử lý khi nhấp vào Profile
        profileLink.addEventListener("click", function(event) {
            event.preventDefault();  // Ngăn chặn hành vi mặc định

            // Ẩn Order và hiển thị Profile
            ordersSection.style.display = "none";
            profileSection.style.display = "block";

            // Đặt class 'active' cho Profile
            profileLink.classList.add("active");
            ordersLink.classList.remove("active");
        });

        // Xử lý khi nhấp vào Orders
        ordersLink.addEventListener("click", function(event) {
            event.preventDefault();  // Ngăn chặn hành vi mặc định

            // Ẩn Profile và hiển thị Order
            profileSection.style.display = "none";
            ordersSection.style.display = "block";

            // Đặt class 'active' cho Orders
            ordersLink.classList.add("active");
            profileLink.classList.remove("active");
        });

        // Hiển thị phần Profile mặc định khi trang tải xong
        profileSection.style.display = "block";
    });
</script>
