@{
}
@model DoAnCoSo.Models.ViewModels.CartItemViewModel
@if (Model?.CartItems != null && Model.CartItems.Any())
{
<!-- Sidebar giỏ hàng -->
<div id="cartSidebar">
    <span class="close-btn">&times;</span> <!-- Nút đóng -->

    <h3 class="text-center">Giỏ Hàng</h3>

    <!-- Hiển thị các mục giỏ hàng -->
    @foreach (var item in Model.CartItems)
    {
        <div class="cart-item">
            <img src="~/img-PhuTungXe(BanMoi)/@item.ProImage" alt="@item.ProName">
            <div class="cart-item-details">
                <p>@item.ProName</p>
                <p>Số lượng: @item.Quantity</p>
            </div>
            <div class="cart-item-price">@item.Price.ToString("#,##0") VND</div>
        </div>
    }

    <!-- Phần hiển thị tổng tiền -->
    <div class="cart-total">
        <h5>Tổng cộng: @Model.GrandToTal.ToString("#,##0") VND</h5>
        <button>Tiến hành thanh toán</button>
    </div>
</div>
}