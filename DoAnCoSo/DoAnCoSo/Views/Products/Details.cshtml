        <h1 class="fw-bold mb-0">Những sảm phẩm tương tự</h1>
        <div class="vesitable">
            <div class="owl-carousel vegetable-carousel justify-content-center">
                @if(lsproducts != null)
                {
                    foreach (var item in lsproducts)
                    {
                        string url = $"Detail/{item.ProId}.html";
                        <div class="border border-primary rounded position-relative vesitable-item">
                            <div class="vesitable-img">
                                <img src="~/img-PhuTungXe(BanMoi)/@item.ProImage" class="img-fluid w-100 rounded-top" alt="Chưa Cóa Ảnh">
                            </div>
                            <a class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;" asp-route="ProductsDetail" asp-route-id="@item.ProId">Chi Tiết Sản Phẩm</a>
                            <div class="p-4 pb-0 rounded-bottom">
                                <h4>Lọc Gió</h4>
                                <p>@item.MetaDesc</p>
                                <div class="d-flex my-3">
                                    <!--Hiển thị đánh giá bằng sao, thay thế bằng điểm đánh giá thực tế-->
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        if (i < item.Rating)
                                        {
                                            <i class="fas fa-star text-primary"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                    }
                                </div>
                                <div class="d-flex justify-content-between flex-lg-wrap">
                                    <p class="text-dark fs-5 fw-bold">@item.ProPrice.ToString("#,##0")VND/ Cái</p>
                                    <a href="#" class="btn border border-secondary rounded-pill px-3 py-1 mb-4 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Thêm vào giỏ hàng</a>
                                </div>
                            </div>
                        </div>
                    }
