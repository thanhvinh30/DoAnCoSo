@using DoAnCoSo.Models.ViewModels
@model DoAnCoSo.Models.ViewModels.CartItemViewModel


@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Giỏ hàng</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"> Trang Chủ</a></li>
        <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Products">Sản Phẩm</a></li>

    </ol>
</div>
@Html.Partial("_NotificationPartial")
<!-- Single Page Header End -->
<!-- Cart Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
       
        <div class="table-responsive">
            <table class="table">
                        
                    <thead>
                        <tr>
                            <th scope="col">Ảnh sản phẩm</th>
                            <th scope="col">Tên sản phẩm</th>
                            <th scope="col">Giá</th>
                            <th scope="col">Số lượng</th>
                            <th scope="col">Tổng cộng</th>
                            <th scope="col">Xử lý</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.CartItems.Count() > 0)
                        {
                            @foreach ( var item in Model.CartItems)
                            {
                                <tr>
                                    <th scope="row">
                                        <div class="d-flex align-items-center">
                                            <img src="~/img-PhuTungXe(BanMoi)/@item.ProImage" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="Chưa có ảnh">
                                        </div>
                                    </th>
                                    <td>
                                    <a asp-route="ProductsDetail" asp-route-id="@item.ProId" class="mb-0 mt-4">@item.ProName</a>
                                    </td>
                                    <td>
                                        <p class="mb-0 mt-4">@item.Price.ToString("#,##0")VND</p>
                                    </td>
                                    <td>
                                        <div class="input-group quantity mt-4" style="width: 100px;">
                                            <div class="input-group-btn">
                                            <a class="btn btn-sm btn-minus rounded-circle bg-light border" asp-controller="Cart" asp-action="Decrease" asp-route-id="@item.ProId">
                                                    <i class="fa fa-minus"></i>
                                                </a>
                                            </div>
                                            <input type="text" class="form-control form-control-sm text-center border-0" value="@item.Quantity">
                                            <div class="input-group-btn">
                                            <a class="btn btn-sm btn-plus rounded-circle bg-light border" asp-controller="Cart" asp-action="Increase" asp-route-id="@item.ProId">
                                                    <i class="fa fa-plus"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="mb-0 mt-4">@Model.CartItems.Where( x => x.ProId == item.ProId).Sum( x => x.Quantity * x.Price).ToString("#,##0")VND</p>
                                    </td>
                                    <td>
                                        <a class="btn btn-md rounded-circle bg-light border mt-4" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProId">
                                            <i class="fa fa-times text-danger"></i>
                                        </a>
                                    </td>
                                </tr>
                            }   
                            <tr rowspan="10">
                                <td colspan="10"><p>Tổng Giỏ Hàng: @Model.GrandToTal.ToString("#,##0")VND</p></td>

                            <td>
                                    <a class="btn btn-md rounded-circle bg-light border mt-4" 
                                    asp-controller="Cart" 
                                    asp-action="CleanCart">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </a>
                            </td>
                        </tr>
                        }
                        else
                        {   
                            <tr>
                                <td colspan="8"><h4>Chưa có sản phẩm nào trong giỏ hàng! Mong Quý Khách Nhanh Tay Mua Hàng Nào ^^</h4></td>
                            </tr>                        
                        }
                </tbody>                
            </table>
        </div>
        <!-- <div class="mt-5">
            <input type="text" class="border-0 border-bottom rounded me-5 py-3 mb-4" placeholder="Mã giảm giá">
            <button class="btn border-secondary rounded-pill px-4 py-3 text-primary" type="button">Áp dụng phiếu giảm gián</button>
        </div> -->
        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Giỏ hàng </h1>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Tổng Tiền</h5>
                            <p class="mb-0" colspan="6"></p>
                        </div>
                        <p class="mb-0 text-end">Vận chuyển đến VietNam.</p>
                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4"> Tổng cộng</h5>
                            <p class="mb-0 pe-4"></p>
                    </div>
                    <!--Model.GrandToTal.ToString("#,##0")VND-->
                    @if(User.Identity.IsAuthenticated){
                        <a asp-controller="Customer" asp-action="Checkout">
                            <button class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button">Tiến hành thanh toán</button>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Customer" asp-action="Checkout">
                                <button class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button">Tiến hành thanh toán</button>
                            </a>
                    }                    
                </div>
            </div>
        </div>
       
    </div>
</div>
<!-- Cart Page End -->


    
