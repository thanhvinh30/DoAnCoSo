@model DoAnCoSo.ModelView.ChangePasswordVM



<form asp-controller="Home" asp-action="ChangePassword" class="row" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-pass">Nhập mật khẩu hiện tại</label>
            <input asp-for="PasswordNow" class="form-control" type="password">
            <span asp-validation-for="PasswordNow" class="text-danger"></span> <!-- Hiển thị lỗi nếu có -->
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-pass">Mật khẩu mới</label>
            <input asp-for="PasswordNew" class="form-control" type="password" >
            <span asp-validation-for="PasswordNew" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="account-confirm-pass">Nhập lại mật khẩu mới</label>
            <input asp-for="ComfirmPasswordNew" class="form-control" type="password" >
            <span asp-validation-for="ComfirmPasswordNew" class="text-danger"></span>
        </div>
    </div>
    <div class="col-12">
        <hr class="mt-2 mb-3">
        <div class="d-flex flex-wrap justify-content-between align-items-center">
            <button class="btn btn-style-1 btn-primary" type="submit">Cập nhật mật khẩu</button>
        </div>
    </div>
</form>
