<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Tài Khoản Cá Nhan</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"> Trang Chủ</a></li>
        <li class="breadcrumb-item"><a asp-controller="Cart" asp-action="Cart">Giỏ hàng</a></li>
        <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Products">Sản Phẩm</a></li>
    </ol>
</div>

@Html.Partial("_NotificationPartial")
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-4 pb-5">
            <!-- Account Sidebar-->
            <div class="author-card pb-3">
                <div class="author-card-cover">
                    <a class="btn btn-style-1 btn-white btn-sm" href="#" data-toggle="tooltip" title="">
                        <img class="author-card-cover" src="~/img/banner-fruits.jpg" />
                    </a>
                </div>
                <div class="author-card-profile">
                    <div class="author-card-avatar">
                        <img src="" alt="Daniel Adams">
                    </div>
                    <div class="author-card-details">
                        <h5 class="author-card-name text-lg">@Model.CusName</h5>
                    </div>
                </div>
            </div>
            <div class="wizard">
                <nav class="list-group list-group-flush">
                    <a class="list-group-item" href="#Orders">
                        <i class="fa fa-cart-arrow-down"></i>Danh Sách Đơn Hàng
                    </a>
                    <a class="list-group-item" href="#Profile">
                        <i class="fa fa-user text-muted"></i>Thông tin cá nhân
                    </a>
                    <a class="list-group-item" href="#ChangePassword">
                        <i class="fa fa-key"></i>Thay đổi mật khẩu
                    </a>
                    <a asp-controller="Customer" asp-action="Logout" class="list-group-item">
                        <i class="fa fa-sign-out"></i>Đăng Xuất
                    </a>
                </nav>
            </div>
        </div>


        <!-- Profile Settings-->


        <div id="Profile" class="col-lg-8 pb-5">
            <form asp-controller="Customer" asp-action="UpdateProfile" class="row" method="post">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-fn">Họ và Tên</label>
                        <input asp-for="CusName" class="form-control" type="text" value="@Model.CusName" required="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-email">E-mail</label>
                        <input asp-for="CusEmail" class="form-control" type="email" value="@Model.CusEmail" disabled="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-phone">Số điện thoại</label>
                        <input asp-for="Phone" class="form-control" type="text" value="@Model.Phone" required="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-phone">Địa Chỉ</label>
                        <input asp-for="Address" class="form-control" type="text" value="@Model.Address" required="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="account-phone">Ngày Sinh</label>
                        <input asp-for="Birthday" class="form-control" type="date" value="@Model.Birthday" required="">
                    </div>
                </div>
                <div class="col-12">
                    <hr class="mt-2 mb-3">
                    <div class="d-flex flex-wrap justify-content-between align-items-center">
                        <button class="btn btn-style-1 btn-primary" type="submit">Lưu thay đổi</button>
                    </div>
                </div>
            </form>
        </div>

        <div id="Orders" class="col-lg-8 pb-5">
            <div class="d-flex justify-content-end pb-3">
                <div class="form-inline">
                    <label class="text-muted mr-3" for="order-sort">Sort Orders</label>
                    <select class="form-control" id="order-sort">
                        <option>All</option>
                        <option>Delivered</option>
                        <option>In Progress</option>
                        <option>Delayed</option>
                        <option>Canceled</option>
                    </select>
                </div>
            </div>
            <div class="table-responsive">
                @await Html.PartialAsync("_OrderPartialView.cshtml", DanhSachDonHang)
            </div>
        </div>

        <div id="ChangePassword" class="col-lg-8 pb-5">
            <div class="table-responsive">
                @await Html.PartialAsync("_ChangePasswordPartialView.cshtml", changePasswordVM)
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        var profileLink = document.querySelector('a[href="#Profile"]');
        var ordersLink = document.querySelector('a[href="#Orders"]');
        var changePasswordLink = document.querySelector('a[href="#ChangePassword"]');

        var profileSection = document.getElementById("Profile");
        var ordersSection = document.getElementById("Orders");
        var changePasswordSection = document.getElementById("ChangePassword");

        // Hàm ẩn tất cả các phần
        function hideAllSections() {
            profileSection.style.display = "none";
            ordersSection.style.display = "none";
            changePasswordSection.style.display = "none";
        }

        // Khi nhấn vào "Profile Settings"
        profileLink.addEventListener("click", function (event) {
            event.preventDefault();  // Ngăn hành vi mặc định
            hideAllSections();  // Ẩn tất cả các phần
            profileSection.style.display = "block";  // Hiển thị phần Profile
        });

        // Khi nhấn vào "Orders List"
        ordersLink.addEventListener("click", function (event) {
            event.preventDefault();  // Ngăn hành vi mặc định
            hideAllSections();  // Ẩn tất cả các phần
            ordersSection.style.display = "block";  // Hiển thị phần Orders
        });

        // Khi nhấn vào "Change Password"
        changePasswordLink.addEventListener("click", function (event) {
            event.preventDefault();  // Ngăn hành vi mặc định
            hideAllSections();  // Ẩn tất cả các phần
            changePasswordSection.style.display = "block";  // Hiển thị phần Change Password
        });
    });
</script>

