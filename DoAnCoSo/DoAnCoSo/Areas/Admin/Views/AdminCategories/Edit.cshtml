@model DoAnCoSo.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CatId" />
            <div class="form-group">
                <label  class="control-label"> Category Name</label>
                <div class="col-lg-10">
                    <input asp-for="CatName" class="form-control" />
                </div>
                <span asp-validation-for="CatName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-lg-2 col-form-label">Ordering</label>
                <div class="col-lg-10">
                    <input asp-for="Ordering" class="form-control" type="number">
                </div>
                <span asp-validation-for="Ordering" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-lg-2 col-form-label">Levels</label>
                <div class="col-lg-10">
                    <input asp-for="Levels" class="form-control" type="number">
                </div>
                <span asp-validation-for="Levels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-lg-2 col-form-label">ParentId</label>
                <div class="col-lg-10">
                    <input asp-for="ParentId" class="form-control" type="number">
                </div>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
            <div class="form-group form-check" style="margin:20px -22px ">
                <div class="form-switch mb-2">
                    <input asp-for="Published" type="checkbox" class="form-check-input" />
                    <label asp-for="Published" class="form-check-label"></label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success"></input>
                |
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>




