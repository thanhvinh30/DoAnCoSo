@model IEnumerable<DoAnCoSo.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h1 class="header-title mt-0 mb-1">Quản lý Quyền Truy Cập</h1>
                <p class="sub-header">
                    <div class="mt-2 mt-md-0">
                        <a class="btn btn-danger me-4 mb-2 mb-md-0" asp-action="Create">
                            <i class="uil-plus me-1"></i>Create New
                        </a>
                    </div>
                </p>

                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Description Roles</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.RoleId</th>
                                        <td>@item.RoleName</td>
                                        <td>@item.DesRole</td>
                                        <td>
                                            <a class="btn btn-outline-warning" asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.RoleId">Edit</a>
                                            <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="AdminRoles" asp-action="Details" asp-route-id="@item.RoleId">View</a>
                                            <a class="btn btn-outline-danger" asp-area="Admin" asp-controller="AdminRoles" asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>

                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>